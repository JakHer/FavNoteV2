{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],

  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },

  "rules": {
    "react/jsx-filename-extension": [
      0,
      {
        "extensions": [".js"]
      }
    ],
    "no-console": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  },

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  }
}
